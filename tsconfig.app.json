{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["./types/**/*.d.ts", "src/**/*", "src/**/*.vue", "./tests/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "preserveValueImports": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
